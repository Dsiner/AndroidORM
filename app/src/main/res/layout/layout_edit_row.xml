<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_row_edit_no"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/lib_pub_color_black"
            android:textSize="@dimen/lib_pub_dimen_text_mini" />

        <EditText
            android:id="@+id/et_row_edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner_bg_edit"
            android:gravity="center"
            android:padding="2dp"
            android:text="Android"
            android:textColor="@color/lib_pub_color_black"
            android:textSize="@dimen/lib_pub_dimen_text_mini" />

        <EditText
            android:id="@+id/et_row_edit_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner_bg_edit"
            android:gravity="center"
            android:padding="2dp"
            android:text="Jack"
            android:textColor="@color/lib_pub_color_black"
            android:textSize="@dimen/lib_pub_dimen_text_mini" />

        <EditText
            android:id="@+id/et_row_edit_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner_bg_edit"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="10"
            android:padding="2dp"
            android:text="$13.66"
            android:textColor="@color/lib_pub_color_black"
            android:textSize="@dimen/lib_pub_dimen_text_mini" />

        <EditText
            android:id="@+id/et_row_edit_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner_bg_edit"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="10"
            android:padding="2dp"
            android:text="2008/12/06"
            android:textColor="@color/lib_pub_color_black"
            android:textSize="@dimen/lib_pub_dimen_text_mini" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/lib_pub_color_line" />
</merge>
