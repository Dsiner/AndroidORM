<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_jump_greendao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:padding="12dp"
        android:text="Greendao" />

    <Button
        android:id="@+id/btn_jump_sqlite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minWidth="120dp"
        android:padding="12dp"
        android:text="Sqlite" />

    <Button
        android:id="@+id/btn_jump_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minWidth="120dp"
        android:padding="12dp"
        android:text="Room" />

    <Button
        android:id="@+id/btn_jump_ormlite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minWidth="120dp"
        android:padding="12dp"
        android:text="Ormlite" />

    <Button
        android:id="@+id/btn_jump_litepal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minWidth="120dp"
        android:padding="12dp"
        android:text="Litepal" />

    <Button
        android:id="@+id/btn_jump_realm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minWidth="120dp"
        android:padding="12dp"
        android:text="Realm" />
</LinearLayout>
