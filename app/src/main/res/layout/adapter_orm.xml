<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.d.lib.slidelayout.SlideLayout
        android:id="@+id/sl_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_row_no"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="false"
                android:text="1"
                android:textColor="@color/lib_pub_color_black"
                android:textSize="@dimen/lib_pub_dimen_text_mini" />

            <TextView
                android:id="@+id/tv_row_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="false"
                android:text="Android"
                android:textColor="@color/lib_pub_color_black"
                android:textSize="@dimen/lib_pub_dimen_text_mini" />

            <TextView
                android:id="@+id/tv_row_author"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="false"
                android:text="Jack"
                android:textColor="@color/lib_pub_color_black"
                android:textSize="@dimen/lib_pub_dimen_text_mini" />

            <TextView
                android:id="@+id/tv_row_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="false"
                android:text="$13.66"
                android:textColor="@color/lib_pub_color_black"
                android:textSize="@dimen/lib_pub_dimen_text_mini" />

            <TextView
                android:id="@+id/tv_row_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="false"
                android:text="2008/12/06"
                android:textColor="@color/lib_pub_color_black"
                android:textSize="@dimen/lib_pub_dimen_text_mini" />

            <FrameLayout
                android:id="@+id/flyt_toggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:descendantFocusability="blocksDescendants"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cb_toggle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sel_toggle_group"
                    android:button="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#C7C7CD"
                android:gravity="center"
                android:text="UPDATE"
                android:textColor="@color/lib_pub_color_white"
                android:textSize="@dimen/lib_pub_dimen_text_mini" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#FF3A30"
                android:gravity="center"
                android:text="DELETE"
                android:textColor="@color/lib_pub_color_white"
                android:textSize="@dimen/lib_pub_dimen_text_mini" />
        </LinearLayout>
    </com.d.lib.slidelayout.SlideLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/lib_pub_color_line" />
</FrameLayout>
